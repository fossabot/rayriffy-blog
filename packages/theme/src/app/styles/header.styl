@import '../../core/styles/commons.styl'

.shell-header
  margin-top getSpace(4)
  @media (min-width: 52em)
    margin-top getSpace(5)
  & > .flex
    display flex
    justify-content center
    & > .container
      margin-bottom getSpace(3)
      widthCalculator(1 / 6)
      @media (min-width: 40em)
        widthCalculator(1 / 8)
      @media (min-width: 52em)
        widthCalculator(1 / 10)
      @media (min-width: 64em)
        widthCalculator(1 / 15)
      & > * > .header-logo
        width 100%
        height auto
