@import '../../../../core/styles/commons.styl'

.template-author-listing
  margin-bottom getSpace(4)
  display flex
  justify-content center
  & > .container
    display flex
    flex-wrap wrap
    widthCalculator(22 / 24)
    @media (min-width: 52em)
      widthCalculator(20 / 24)
    @media (min-width: 64em)
      widthCalculator(18 / 24)
    & > .item
      box-sizing border-box
      padding getSpace(3)
      widthCalculator(1)
      @media (min-width: 52em)
        widthCalculator(1 / 2)
      & > .core-card > .card-children
        padding 0 getSpace(4) getSpace(4) getSpace(4)
